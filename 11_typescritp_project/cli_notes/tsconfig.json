{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "types": ["node"],
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "noEmit": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
